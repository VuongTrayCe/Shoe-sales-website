mixin  formAddProduct()
    section.category-section
        //- button.btn.btn-primary.add_Product(type='button') Add new product
        #productModal.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
            .modal-dialog
                form#cat_form(method='POST' action='/admin/productsadd?_method=PATCH')
                    .modal-content
                        // header
                        .modal-header
                            h5#exampleModalLabel.modal-title Modal title
                        // Body

                        .modal-body
                            // product title
                            .row
                                .col-md-12
                                    .form-group
                                        label(for='prodcuct_title') Product Title
                                        input#prodcuct_title.form-control(type='text' name='product_title' placeholder='Product Title')
                                        span#productError.text-danger
                            .row#SizePriceStock0
                                .col-md-6
                                    .form-group
                                        label(for='category_name') Category Name
                                        select#category_name.form-control(name='category_name')
                                            option(value='0') Select a Category
                                            option(value="<?= $row['category_id']; ?>")
                                        span#categoryError.text-danger
                                .col-md-6
                                    .form-group
                                        label(for='category_name') Brand Name
                                        select#category_name.form-control(name='category_name')
                                            option(value='0') Select a Category
                                            option(value="<?= $row['category_id']; ?>")
                                        span#categoryError.text-danger


                            .row#SizePriceStock
                                .col-md-3
                                    .form-group
                                        label(for='product-size') Size
                                        input#product-size.form-control(type='text' name='size' placeholder='Size Product')
                                        span#productError.text-danger
                                .col-md-3
                                    .form-group
                                        label(for='product_price') Price
                                        input#product-price.form-control(type='text' name='price' placeholder='Price')
                                        span#productError.text-danger
                                .col-md-3
                                    .form-group
                                        label(for='product_stock') Stock
                                        input#product-stock.form-control(type='text' name='stock' placeholder='Stock')
                                        span#productError.text-danger
                                .col-md-2.pt-4
                                        button#add.btn.btn-primary.btnAddSizeProduct(type="button" name='add') Add
 
                            .row
                                .col-md-12
                                    .form-group
                                        label(for='product_thumbnail') Upload Product Thumbnail
                                        input#product_thumbnail.form-control(type='file' name='product_thumbnail')
                                        span#thumbnail_error.text-danger

                            .row   
                                .col-md-12
                                    .form-group
                                        label(for='long_description') Description
                                        textarea#long_description.form-control(name='long_description' rows='5' placeholder='Long Description')
                                        span#long_description_error.text-danger

                            .row
                                .col-md-12
                                    label Add More Thumbnails
                                .col-md-10
                                    input.form-control(type='file')
                                .col-md-2
                                    button.btn.btn-success.btn-block.add-more-thumbnail(type='button') Add

                        .modal-footer
                            input#cat_id(type='hidden' name='id')
                            input#form_type(type='hidden' name='form_type')
                            button.btn.btn-secondary.btnCloseFormAddProduct(type='button' data-dismiss='modal') Close
                            button.btn.btn-primary.save.btnSaveFormAddProduct(type='submit') Save
