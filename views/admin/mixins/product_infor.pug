
include ./product_infor_item.pug

mixin product_infor(products,listOption)
    nav.navbar.navbar_menu-title
        .nameTitle Danh Sách Sản Phẩm
    nav.navbar.navbar_menu-Search
        input(type="text" class="form-control",id="seach" placeholder="Bạn tìm kiếm gì" aria-label="Recipient's username" aria-describedby="button-addon2")
        i(class="fa-solid fa-magnifying-glass")
        select.form-select.filterSearchProduct#select1(aria-label='Default select example')
            each item in listOption
                if item.class=="active"
                    option(value=item.value,selected) #{item.name}
                else 
                    option(value=item.value) #{item.name}


        
        button.btn.btn-success.btn_addProduct(type='button') Thêm

    nav.navbar.navbar_content
        table.table.align-middle
            thead
                tr
                    th(scope='col',style='width: 5%') STT
                    th(scope='col',style='width: 10%') Image
                    th(scope='col',style='width: 30%') Tiêu Đề
                    th(scope='col',style='width: 10%') Brand
                    th(cope='col',style='width: 10%') Trạng Thái 
                    th(scope='col') Detail
                    th(scope='col') Hoạt Động

            tbody.table-group-divider
            each item,index in products
                +product_infor_item(item,index)
                