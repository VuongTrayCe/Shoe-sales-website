extends ../../layout/default.pug
include ../../mixins/product_item.pug
include ../../mixins/header_product.pug


block main
  .headerListProduct
    +product_title(listRoute)
  .wrapperListProduct
    .optionProductType
      .titleFilter 
        p1 Bộ Lọc
      .titleFilterPrice 
        p1 Mức giá
        .form-check
          input#flexRadioDefault1.form-check-input(type='radio' name='flexRadioDefault')
          label.form-check-label(for='flexRadioDefault1')
            | 0 - 500.000
        .form-check
          input#flexRadioDefault2.form-check-input(type='radio' name='flexRadioDefault')
          label.form-check-label(for='flexRadioDefault2')
            | 500.000 - 1.000.000
        .form-check
          input#flexRadioDefault3.form-check-input(type='radio' name='flexRadioDefault')
          label.form-check-label(for='flexRadioDefault3')
            | 1.000.000 - 5.000.000
        .form-check
          input#flexRadioDefault3.form-check-input(type='radio' name='flexRadioDefault')
          label.form-check-label(for='flexRadioDefault4')
            | Trên 5.000.000

      div 
        p1 Thương hiệu
        .form-check
          input#flexRadioDefault1.form-check-input(type='radio' name='flexRadioDefault1')
          label.form-check-label(for='flexRadioDefault1')
            | Adidas
        .form-check
          input#flexRadioDefault2.form-check-input(type='radio' name='flexRadioDefault1')
          label.form-check-label(for='flexRadioDefault2')
            | Nike
        .form-check
          input#flexRadioDefault3.form-check-input(type='radio' name='flexRadioDefault1')
          label.form-check-label(for='flexRadioDefault3')
            | Puma
        .form-check
          input#flexRadioDefault3.form-check-input(type='radio' name='flexRadioDefault1')
          label.form-check-label(for='flexRadioDefault4')
            | Vans

    section.listProducts
      nav.nav__box
        each item in product
          +product_item(item.thumbnail,item.title,item.price,item.priceNew,item.discountPercentage)
        


